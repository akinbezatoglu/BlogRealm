@model BlogRealm.Web.DTO.CategoryDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <span>Category</span>
                <h3>@Model.Name</h3>
                <p>@Model.About</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-white">
    <div class="container">
        <div class="row">

            @foreach (var blog in Model.Blogs)
            {
                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="@blog.Url"><img src="@blog.Image" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="post-category text-white bg-secondary mb-3">Politics</span>

                            <h2><a href="@blog.Url">@blog.Title</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="@blog.Author.Image" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1">By <a href="@blog.AuthorUrl">@blog.Author.Name</a></span>
                                <span>&nbsp;-&nbsp; @blog.Date.Date.ToString("MMMM dd, yyyy")</span>
                            </div>

                            <p>@blog.ContentPreview</p>
                            <p><a href="#">Read More</a></p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>