@model BlogRealm.Web.DTO.AboutDTO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.MainContentImage');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">@Model.MainContentTitle</h1>
                    <p class="lead mb-4 text-white">@Model.MainContent</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 order-md-2">
                <img src="@Model.FirstContentImage" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 mr-auto order-md-1">
                <h2>@Model.FirstContentTitle</h2>
                <p>@Model.FirstContent</p>
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <div id="feturedAuthorsContainer" class="container"></div>
</div>

<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script>
    $(document).ready(function() {
        $("#feturedAuthorsContainer").load("@Url.Action("FeaturedAuthors", "Author")");
    });
</script>


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.SecondContentImage" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 ml-auto">
                <h2>@Model.SecondContentTitle</h2>
                <p class="mb-4">@Model.SecondContent</p>
            </div>
        </div>
    </div>
</div>
