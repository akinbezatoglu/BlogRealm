@model IEnumerable<BlogRealm.Web.DTO.BlogSmallDTO>

@if (Model != null && Model.Any())
{
    <div class="site-section bg-light">
        <div class="container">
            <div class="row align-items-stretch retro-layout-2">
                <div class="col-md-4">

                    @foreach (BlogRealm.Web.DTO.BlogSmallDTO blog in Model.Skip(1).Take(1))
                    {
                        <a href="@blog.Url" class="h-entry mb-30 v-height gradient" style="background-image: url('@blog.Image');">

                            <div class="text">
                                <h2>@blog.Title</h2>
                                <span class="date">&nbsp;-&nbsp; @blog.Date.Date.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </a>
                    }

                    @foreach (BlogRealm.Web.DTO.BlogSmallDTO blog in Model.Skip(2).Take(1))
                    {
                        <a href="@blog.Url" class="h-entry v-height gradient" style="background-image: url('@blog.Image');">

                            <div class="text">
                                <h2>@blog.Title</h2>
                                <span class="date">&nbsp;-&nbsp; @blog.Date.Date.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </a>
                    }

                </div>
                <div class="col-md-4">

                    @foreach (BlogRealm.Web.DTO.BlogSmallDTO blog in Model.Take(1))
                    {
                        <a href="@blog.Url" class="h-entry img-5 h-100 gradient" style="background-image: url('@blog.Image');">

                            <div class="text">
                                <div class="post-categories mb-3">
                                    <span class="post-category bg-danger">@blog.Category.Name</span>
                                </div>
                                <h2>@blog.Title</h2>
                                <span class="date">&nbsp;-&nbsp; @blog.Date.Date.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </a>
                    }

                </div>
                <div class="col-md-4">

                    @foreach (BlogRealm.Web.DTO.BlogSmallDTO blog in Model.Skip(3).Take(1))
                    {
                        <a href="@blog.Url" class="h-entry mb-30 v-height gradient" style="background-image: url('@blog.Image');">

                            <div class="text">
                                <h2>@blog.Title</h2>
                                <span class="date">&nbsp;-&nbsp; @blog.Date.Date.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </a>
                    }

                    @foreach (BlogRealm.Web.DTO.BlogSmallDTO blog in Model.Skip(4).Take(1))
                    {
                        <a href="@blog.Url" class="h-entry v-height gradient" style="background-image: url('@blog.Image');">

                            <div class="text">
                                <h2>@blog.Title</h2>
                                <span class="date">&nbsp;-&nbsp; @blog.Date.Date.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
}